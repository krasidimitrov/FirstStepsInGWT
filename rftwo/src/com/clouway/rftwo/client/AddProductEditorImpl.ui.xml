<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .addPanelStyle {
      width: 160px;
      margin-top: -200px;;
      margin-left: auto;
      margin-right: auto;
      /*background-color: rgba(176, 176, 176, 0);*/
    }

    .leftStyle {
      margin-left: 120px;
    }

  </ui:style>


  <g:HTMLPanel styleName="{style.addPanelStyle}">
    <g:Label>name:</g:Label>
    <g:TextBox ui:field="name" />
    <g:Label>price:</g:Label>
    <g:TextBox ui:field="price" />
    <g:Label>quantity:</g:Label>
    <g:TextBox ui:field="quantity" />
    <g:Button ui:field="addProductButton" styleName="{style.leftStyle}">add</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>