<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             >

  <ui:style>
    .formStyle {
      margin-left: auto;
      margin-right: auto;
      width: 160px;
      background-color: #ffb013;
    }

    .funny {
      margin-left: 5px;
      border-style: ridge;
      border-color: blue;
      outline-style: ridge;
      outline-color: #000000;
    }

  </ui:style>

  <g:HTMLPanel styleName="{style.formStyle}">
    <g:Label>Name:</g:Label>
    <g:TextBox ui:field="name"/>
    <g:Label>Nick:</g:Label>
    <g:TextBox ui:field="nick">gdasgas</g:TextBox>
    <g:Label>Phone:</g:Label>
    <g:TextBox ui:field="phone">gdasgas</g:TextBox>
    <g:Label>Occupation:</g:Label>
    <g:TextBox ui:field="occupation">gdasgas</g:TextBox>

    <g:Button ui:field="savePersonButton" >save</g:Button>
    <g:Button ui:field="selectButton" >select</g:Button>
    <g:Button ui:field="switchButton">turn edit ON</g:Button>
    <g:Button ui:field="editButton" >save changes</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>