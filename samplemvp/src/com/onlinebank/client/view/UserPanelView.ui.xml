<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .centerFormStyle {
      /*border-style: dashed;*/
      position: relative;
      width: 350px;
      margin-left: auto;
      margin-right: auto;
      background-color: #b5dcff;
    }

    .depositTextBoxStyle {
      position: relative;
      margin-top: 50px;
      border-style: solid;
      position: relative;
      margin-left: 60px;
    }

    .withdrawTextBoxStyle {
      position: relative;
      margin-top: 50px;
      border-style: double;
      position: relative;
      margin-left: 60px;
    }

    .balanceLabelStyle {
      position: relative;
      margin-left: 130px;
      margin-top: 50px;
    }
  </ui:style>

  <g:HTMLPanel styleName="{style.centerFormStyle}">
    <g:TextBox styleName="{style.depositTextBoxStyle}" ui:field="depositTextBox"/>
    <g:Button ui:field="depositButton">deposit</g:Button>
    <g:TextBox styleName="{style.withdrawTextBoxStyle}"  ui:field="withdrawTextBox"/>
    <g:Button ui:field="withdrawButton">withdraw</g:Button>
    <g:Label styleName="{style.balanceLabelStyle}" ui:field="balanceLabel">Balance: 0 $</g:Label>
  </g:HTMLPanel>
</ui:UiBinder>