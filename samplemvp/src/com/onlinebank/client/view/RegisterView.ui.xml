<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .centerFormStyle {
      position: relative;
      width: 160px;
      margin-left: auto;
      margin-right: auto;
      background-color: #ffdc9f;
    }

    .registerButtonStyle {
      position: relative;
      margin-left: 48px;
    }

    .goToLoginButtonStyle {
      position: relative;
      margin-left: 42px;
      margin-top: 50px;
    }

  </ui:style>

  <g:HTMLPanel styleName="{style.centerFormStyle}">
    <g:Label>username:</g:Label>
    <g:TextBox ui:field="usernameTextBox"/>
    <g:Label>password:</g:Label>
    <g:PasswordTextBox ui:field="passwordTextBox"/>
    <g:Button styleName="{style.registerButtonStyle}" ui:field="registerButton">Register</g:Button>
    <g:Button styleName="{style.goToLoginButtonStyle}" ui:field="goToLoginButton">go to login</g:Button>
  </g:HTMLPanel>
</ui:UiBinder>